
####################### item_pedido ###############################
ALTER TABLE `item_pedido` ADD CONSTRAINT `pk_pedido_item` PRIMARY KEY (`nr_item_pedido`, `id_pedido`);
ALTER TABLE `item_pedido` MODIFY COLUMN `nr_item_pedido` BIGINT UNSIGNED AUTO_INCREMENT;

###################### imagem #############################
